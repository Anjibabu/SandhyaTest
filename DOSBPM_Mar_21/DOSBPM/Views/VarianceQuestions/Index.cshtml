@model DOSBPM.Models.VarianceQuestions

@{
    ViewBag.Title = "Variance Questions";
}

<div class="container-fluid">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-group">
        <h3>Variance Questions</h3><br />
        <div class="col-md-3">
            
            <label class="required"> Is Uniform Code or Energy Code variance required?</label>
        </div>

        <div class="col-md-1 ">
            Yes<br />
            <input type="radio" />
        </div>
        <div class="col-md-1">
            NO<br />
            <input type="radio" />
        </div>
        <div class="col-md-1">
            UnKnown<br />
            &nbsp;<input type="radio" />
        </div>
        <div class="col-md-12"></div><br />
        
        <div class="col-md-3">
           
            <label class="required">Has the Variance been applied for?</label>
        </div>
        <div class="col-md-1 ">
            Yes<br />
            <input type="radio" />
        </div>
        <div class="col-md-1">
            NO<br />
            <input type="radio" />
        </div>
        <div class="col-md-1">
            UnKnown<br />
            &nbsp;<input type="radio" />
        </div>
        <div class="col-md-1">

        </div>
        <div class="form-inline col-md-4">
            @Html.TextBoxFor(x => x.Variance, new { @class = "form-control", style = "width:150px" })
            <i style="font-size:9px">Please enter the reason why the variance has not been applied for</i>
        </div>
        <div class="col-md-12"></div>
        <div class="col-md-3">
            
            <label class="required">Is there a petition number available?</label>
        </div>
        <div class="col-md-1 ">
            Yes<br />
            <input type="radio" />
        </div>
        <div class="col-md-1">
            NO<br />
            <input type="radio" />
        </div>
        <div class="col-md-1">
            UnKnown<br />
            &nbsp;<input type="radio" />
        </div>
        <div class="col-md-1">

        </div>
        <div class="form-inline col-md-4">
            @Html.TextBoxFor(x => x.Variance, new { @class = "form-control", style = "width:150px" })
            <i style="font-size:9px">Please enter the Petition Number></i>
        </div>
        <div class="col-md-12"></div>
        <div class="col-md-3">
            
            <label class="required">Was the variance application approved?</label>
        </div>
        <div class="col-md-1 ">
            Yes<br />
            <input type="radio" />
        </div>
        <div class="col-md-1">
            NO<br />
            <input type="radio" />
        </div>
        <div class="col-md-1">
            UnKnown<br />
            &nbsp;<input type="radio" />
        </div>
        <div class="col-md-1">

        </div>
        <div class="col-md-4">
            <br />
            <input type="checkbox" />
            <i style="font-size:9px">Triggers the determination upload prior to submission</i>
        </div>
        <div class="col-md-12"></div>
        <div class="col-md-3">
            <label class="required">Are there any previous variances on this property?</label>
        </div>
        <div class="col-md-1 ">
            Yes<br />
            <input type="radio" />
        </div>
        <div class="col-md-1">
            NO<br />
            <input type="radio" />
        </div>
        <div class="col-md-1">
            UnKnown<br />
            &nbsp;<input type="radio" />
        </div>
        <div class="col-md-1">

        </div>
        <div class="col-md-4">
            <br />
            <input type="checkbox" />
            <i style="font-size:9px">Triggers the determination upload prior to submission</i>
        </div>
        <div class="col-md-12"><br></div>

        <div class="col-md-8"></div>
        <div class="col-md-4">
            <br /><br /><br /><br />
            <label>Comments(Applicant)</label><br />
            @Html.TextAreaFor(model => model.ApplicantComment, new { @class = "form-control", maxlength = 2000, @cols = "75", @rows = "3" })
        </div>
        <div class="col-md-8"></div>
        <div class="col-md-4">
            <br />
            <label>Comments(Reviewer)</label><br />
            @Html.TextAreaFor(model => model.ReviewrComment, new { @class = "form-control", maxlength = 2000, @cols = "75", @rows = "3" })

        </div>

        <div class="col-md-12">
            <br /><br /><br /><br />
            <div class="col-md-3 ">

                <input type="button" id="btnNext" value="Previous" class="NextBtn btn btn-default" style="background-color:#a90606; color:white" onclick="location.href = '@Url.Action("Index", "OccupancyHeightsandAreas")'" />

            </div>
            <div class="col-md-8 text-right ">

                <input type="button" id="btnNext" value="Next" class="NextBtn btn btn-default" style="background-color:#a90606; color:white" onclick="location.href = '@Url.Action("Index", "SiteandUtilities")'" />

            </div>
        </div>
        <div class="col-md-12">
            <br /><br /><br /><br /><br /><br />
        </div>
    </div>
    
    }
    </div>

<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script>

    $('input[type="checkbox"]').on('change', function () {
        $('input[type="checkbox"]').not(this).prop('checked', false);
    });
    $('input[type="radio"]').on('change', function () {
        $('input[type="radio"]').not(this).prop('checked', false);
    });

</script>

            






